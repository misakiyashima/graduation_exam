<% content_for(:title, 'お気に入り') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3"><input class="form-control" placeholder="検索ワード" type="search"/>
          <div class="input-group-append"><input type="submit" value="検索" class="btn btn-primary"/></div>
        </div>
      </form>
    </div>
  </div>
  <!-- 検索一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_hotels.present? %>
          <%= render @bookmark_hotels %>
        <% else %>
          <p>お気に入り登録はありません</p>
        <% end %>
          <%= link_to 'ホームに戻る', root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>