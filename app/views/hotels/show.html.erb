<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>みんなの旅ログ</h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <%= image_tag @hotel.hotelImageUrl, width: "300", height: "200", class: "card-img-top img-fluid" %>
            </div>
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @hotel.hotelName %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@hotel.user.decorate.full_name}" %></li>
                <li class="list-inline-item"><%= @hotel.created_at.strftime('%Y-%m-%d %H:%M:%S') %></li>
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to "#", id: "button-edit-#{@hotel.id}" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", id: "button-delete-#{@hotel.id}", class: "ms-2" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
            </div>
          </div>
          <p><%= simple_format(@hotel.hotelSpecial) %></p>
          <p><%= link_to '詳細情報', @hotel_information_url, target: '_blank' %></p>
        </div>
      </article>
    </div>
  </div>
  <%= render 'comments/form', comment: @comment, hotel: @hotel if user_signed_in? %>
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <table class="table">
        <tbody id="table-comment">
          <%= render @comments %>
        </tbody>
      </table>
    </div>
  </div>
</div>
