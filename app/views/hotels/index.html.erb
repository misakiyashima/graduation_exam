<%= form_with url: search_hotels_path, method: :get, local: true do %>
  <div>
    <%= label_tag :keyword, "キーワード" %>
    <%= text_field_tag :keyword, params[:keyword] %>
  </div>
  <div>
    <%= submit_tag "検索" %>
  </div>
<% end %>

<turbo-frame id="hotels">
  <% if @hotels.present? %>
    <ul>
      <% @hotels.each do |hotel| %>
        <li>
          <h2><%= hotel['hotelName'] %></h2>
          <img src="<%= hotel['hotelImageUrl'] %>" alt="<%= hotel['hotelName'] %>" style="width: 200px; height: auto;">
          <p><%= hotel['hotelSpecial'] %></p>
          <a href="<%= hotel['hotelInformationUrl'] %>">詳細情報</a>
          <%= render 'bookmark_buttons', hotel: hotel %>
        </li>
      <% end %>    
    </ul>
  <% else %>
    <p>検索結果がありません。</p>
  <% end %>
</turbo-frame>


<div>
  <%= link_to 'ホームに戻る', root_path, class: 'btn btn-primary' %>
</div>
