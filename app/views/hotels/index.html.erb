
<%= form_with url: search_hotels_path, method: :get, local: true do %>
  <div>
    <%= label_tag :keyword, "キーワード" %>
    <%= text_field_tag :keyword, params[:keyword] %>
  </div>
  <div>
    <%= submit_tag "検索" %>
  </div>
<% end %>

<turbo-frame id="hotels">
  <% if @hotels.present? %>
    <ul>
      <% @hotels.each do |hotel| %>
      
    <li class="w-80 flex items-center gap-x-3.5 py-2 px-3 rounded-md text-sm text-gray-800 hover:bg-blue-200 focus:ring-2 focus:ring-blue-500 dark:text-gray-400 dark:hover:bg-blue-200 dark:hover:text-gray-300" role="option" data-autocomplete-value="<%= hotel['hotelBasicInfo']['hotelNo'] %>" data-autocomplete-label="<%= hotel['hotelBasicInfo']['hotelName'] %>">
      <%= hotel['hotelBasicInfo']['hotelName'] %>

            <% if current_user.bookmark?(hotel) %> 
            <span class="text-success">お気に入り済み</span> 
            <%= button_to 'お気に入り解除', unbookmark_path(hotel), method: :delete, class: 'btn btn-secondary' %> 
            <% else %> 
            <%= button_to 'お気に入りに追加', bookmarks_path(hotel_id: hotel['id']), method: :post, class: 'btn btn-secondary' %> 
            <% end %>

        </li>
      <% end %>
    </ul>
  <% else %>
    <p>検索結果がありません。</p>
  <% end %>
</turbo-frame>

<div>
  <%= link_to 'ホームに戻る', root_path, class: 'btn btn-primary' %>
</div>
