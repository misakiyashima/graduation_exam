<div class="col-12">
  <div class="card mb-3">
    <div class="card-body">
      <% if bookmark.present? %>
        <h5 class="card-title"><%= bookmark.hotel_name %></h5>
        <%= link_to '詳細を見る', bookmark.hotel_information_url, class: 'btn btn-primary', target: '_blank' %>
      <% else %>
        <p>ホテル情報がありません。</p>
      <% end %>
    </div>
  </div>
</div>
