<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>地図から探す</title>
  <style>
    #map {
      height: 500px;
      width: 100%;
    }
  </style>
</head>
<body>
  <h1>オールインクルーシブホテルを地図から探す</h1>
  <div id="map"></div>

  <script>
    // Google Maps APIキー
    const GOOGLE_MAPS_API_KEY = "<%= ENV['GOOGLE_MAPS_API_KEY'] %>";
    console.log('Google Maps APIキー:', GOOGLE_MAPS_API_KEY);

    // 宿泊施設データをRailsから取得
    const hotels = <%= raw @hotels.to_json %>;
    console.log('Hotels Data in Maps/index.html.erb:', hotels); // コンソールにデータを表示

    // Google Mapsの初期化関数
    function initMap() {
      const map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: 36.2048, lng: 138.2529 }, // 日本の中心座標に設定
        zoom: 5 // ズームレベルを広げて設定
      });

      console.log('Map initialized');

      // マーカーを地図に追加
      hotels.forEach((hotel, index) => {
        console.log(`Hotel Data [${index}]:`, hotel); // 各ホテルのデータをコンソールに表示

        const lat = parseFloat(hotel.latitude);
        const lng = parseFloat(hotel.longitude);

        console.log(`Coordinates for ${hotel.name}: lat=${lat}, lng=${lng}`);

        if (isNaN(lat) || isNaN(lng) || lat < -90 || lat > 90 || lng < -180 || lng > 180) {
          console.error(`Invalid coordinates for hotel: ${hotel.name}`);
          return;
        }

        // AdvancedMarkerElementの使用
        const marker = new google.maps.marker.AdvancedMarkerElement({
          position: { lat: lat, lng: lng },
          map: map,
          title: hotel.name
        });

        console.log(`Creating marker for: ${hotel.name} at lat=${lat}, lng=${lng}`);

        const infoWindow = new google.maps.InfoWindow({
          content: hotel.info_content
        });

        marker.addListener("click", () => {
          infoWindow.open(map, marker);
        });
      });

      console.log('All markers added to map');
    }

    // Google Maps APIの読み込み
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key=${GOOGLE_MAPS_API_KEY}&callback=initMap`;
    script.async = true;
    script.defer = true;
    document.body.appendChild(script);
  </script>
</body>
</html>
