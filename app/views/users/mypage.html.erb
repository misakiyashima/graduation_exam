<div class="container py-5">
  <h1 class="mb-4">マイページ</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h4 class="card-title">ユーザー情報</h4>
      <p><strong>名前:</strong> <%= @user.name %></p>
      <p><strong>メールアドレス:</strong> <%= @user.email %></p>
    </div>
  </div>

  <div class="row">
    <!-- お気に入り一覧へのリンク -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">お気に入り一覧</h5>
          <p><%= link_to 'お気に入りを見る', bookmarks_hotels_path, class: 'btn btn-primary btn-sm' %></p>
        </div>
      </div>
    </div>
    <!-- 自分のコメント投稿一覧へのリンク -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">my旅ログ一覧</h5>
          <p><%= link_to '旅ログを見る', mypage_comments_path, class: 'btn btn-primary btn-sm' %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'ホームに戻る', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
