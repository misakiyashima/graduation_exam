<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <h1>ユーザー登録</h1>
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %> 
        </div>
        <div class="mb-3">
          <%= f.label :メースアドレス, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード確認, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ログインページへ', login_path %>
        <br>
        <div class="mb-3">
          <%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-secondary' %>
        </div>
        <%= link_to 'ホームに戻る', root_path, class: 'btn btn-primary mt-2' %>
      </div>
    </div>
  </div>
</div>
