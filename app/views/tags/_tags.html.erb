<div>
  <% if hotel %>
    <h2><%= hotel['hotelName'] %></h2>
    <ul>
      <% if hotel['tags'] %>
        <% hotel['tags'].each do |tag| %>
          <% if tag %>
            <li><%= tag['name'] %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
    <% if current_user %>
      <%= link_to 'タグを追加', new_tag_path %>
    <% else %>
      <%= link_to 'タグを追加', login_path %>
    <% end %>
  <% else %>
    <p>ホテル情報が見つかりません。</p>
  <% end %>
</div>
