<% content_for :styles do %>
  <%= stylesheet_link_tag "tags", media: "all", "data-turbo-track": "reload" %>
<% end %>

<div>
  <% if hotel['tags'].present? %>
    <ul class="tag-list">
      <% hotel['tags'].each do |tag| %>
        <li class="tag"><%= tag %></li>
      <% end %>
    </ul>
  <% else %>
    <p>タグがありません。</p>
  <% end %>
  <% if current_user %>
    <%= link_to 'タグを追加', new_tag_path(hotel_id: hotel['hotelNo']), class: "btn btn-primary d-inline-block" %>
  <% else %>
    <%= link_to 'タグを追加', login_path %>
  <% end %>
</div>
