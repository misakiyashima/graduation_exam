<%= form_with model: @hotel_tag, url: tags_path, method: :post do |form| %>
  <div>
    <%= form.label :hotel_id, "ホテル" %>
    <%= form.collection_select :hotel_id, Hotel.all, :id, :name %>
  </div>
  <div>
    <%= form.label :tag_id, "タグ" %>
    <%= form.collection_select :tag_id, Tag.all, :id, :name %>
  </div>
  <div>
    <%= form.submit "タグを追加" %>
  </div>
<% end %>
