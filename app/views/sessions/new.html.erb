<h1>ログイン</h1>

  <%= form_with model: @user do |form| %>
  <div>
    <%= form.label :email, 'メールアドレス', style: "display: block" %>
    <%= form.text_field :email, value: params[:mail] %>
  </div>

  <div>
    <%= form.label :password, 'パスワード', style: "display: block" %>
    <%= form.text_field :password, value: params[:password] %>
  </div>

  <div>
    <%= form.submit 'ログイン' %>
  </div>
<% end %>
