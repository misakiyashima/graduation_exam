<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'styles', media: 'all' %>
</head>
<body>
   <div class="image-container">
      <img src="<%= image_path('pictures/IMG_1150.JPG') %>" alt="写真1">
      <img src="<%= image_path('pictures/IMG_1179.JPG') %>" alt="写真2">
      <img src="<%= image_path('pictures/IMG_3290.JPG') %>" alt="写真3">
      <img src="<%= image_path('pictures/IMG_3934.JPG') %>" alt="写真４">
      <img src="<%= image_path('pictures/IMG_3990.JPG') %>" alt="写真５">
   </div>
  <h1 id="title">特別ステイで至福の時間を</h1>
  <h2>オールインクルーシブホテル</h2>
  <br>
  <%= form_with url: search_hotels_path, method: :get, local: true do %>
    <div>
      <%= label_tag :keyword, "キーワード" %>
      <%= text_field_tag :keyword, params[:keyword] %>
    </div>
    <div>
      <%= submit_tag "検索" %>
    </div>
  <% end %>

  <% if @hotels.present? %>
    <ul>
      <% @hotels.each do |hotel| %>
        <li><%= hotel['hotelBasicInfo']['hotelName'] %></li>
      <% end %>
    </ul>
  <% end %>

