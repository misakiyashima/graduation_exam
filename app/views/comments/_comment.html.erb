<% comments.each do |comment| %>
  <div class="comment">
    <p><%= comment.body %></p>
    <ul class="list-inline justify-content-center" style="float: right;">
      <li class="list-inline-item">
        <%= link_to "編集", edit_comment_path(comment), class: "edit-comment-link" %>
          <i class="bi bi-pencil-fill"></i>
        </li>
      <li class="list-inline-item">
        <%= link_to "削除", comment, method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "delete-comment-link" %>
          <i class="bi bi-trash-fill"></i>
        </li>
    </ul>
  </div>
<% end %>
