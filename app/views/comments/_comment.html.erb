<tr id="comment-<%= comment.id %>" class="comment-box">
  <td style="width: 60px">
    <i class="bi bi-person-circle" style="font-size: 50px;"></i> <!-- Bootstrapのアイコンを使用 -->
  </td>
  <td>
    <h3 class="small"><%= comment.user.name %></h3>
    <p><%= simple_format(comment.body) %></p>
  </td>
  <% if current_user&.own?(comment) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to "#", class: "edit-comment-link" do %>
            <i class="bi bi-pencil-fill"></i> <!-- 修正: アイコンのクラス -->
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to "#", class: "delete-comment-link" do %>
            <i class="bi bi-trash-fill"></i> <!-- 修正: アイコンのクラス -->
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>
